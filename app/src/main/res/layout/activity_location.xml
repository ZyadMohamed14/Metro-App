<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_margin="10dp"
    android:layout_height="match_parent"
    tools:context=".LocationActivity" >

    <Button
        android:id="@+id/getMyLocatioBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:onClick="getCurrentLocation"
        android:text="getMyLocation" />

    <TextView
        android:id="@+id/currentLocationtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:text="" />


    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:inputType="text"
        android:hint="Enter End Direction" />
    <Button
        android:id="@+id/endDirectionBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:onClick="confirmEndDirection"
        android:text="confrim End Direction" />

    <TextView
        android:id="@+id/endDirectionTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:text="" />

    <Button
        android:id="@+id/confrimRout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:onClick="confirmRout"
        android:text="Confirm Rout" />
</LinearLayout>